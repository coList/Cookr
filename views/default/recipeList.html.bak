{{extend 'layout.html'}}
<h1>
    Rezepte
</h1>


<table>

    <tfoot>
        {{for row in recipes:}}
        <tr>
            <td>
                <a href="{{=URL('showRecipe', args=row.id)}}">
                {{if row.image != "":}}
                <img src="{{=URL('default', 'download', args=row.image)}}" class="listRecipeImage"/>
                    {{else:}}
                    <div class="noListRecipeImage"></div>
                {{pass}}
                </a>
            </td>
            <td>
                <a href="{{=URL('showRecipe', args=row.id)}}">
                    {{=row.title}}
                </a>
            </td>
            <td>
                {{=row.description}}
            </td>
        </tr>
        {{pass}}
    </tfoot>
</table>

{{if page > 0:}}
<a href="{{=URL('recipeList', args = page - 1)}}">
    <button class="mainButton">
        Zur√ºck
    </button>
</a>
{{pass}}

{{if len(recipes) >= RECIPES_PER_PAGE:}}
<a href="{{=URL('recipeList', args=page + 1)}}">
    <button class="mainButton">
        Weiter
    </button>
</a>
{{pass}}
