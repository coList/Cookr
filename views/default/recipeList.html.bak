{{extend 'layout.html'}}
<h1>
    Rezepte
</h1>

<h2>
    Filter
</h2>


<p>
    {{for row in categories:}}
    {{=row}} 
    {{pass}}
</p>

<table>
    <thead>
        <tr>
            <td>
                Rezeptname
            </td>
            <td>
                Beschreibung
            </td>
        </tr>
    </thead>
    <tfoot>
        {{for row in recipes:}}
        <tr>
            <td>
                <a href="{{=URL('showRecipe', args=row.id)}}">
                    {{=row.title}}
                </a>
            </td>
            <td>
                {{=row.description}}
            </td>
        </tr>
        {{pass}}
    </tfoot>
    
    
</table>
