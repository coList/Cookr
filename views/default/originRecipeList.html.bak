{{extend 'layout.html'}}
<h1>
    {{=originName}}e Gerichte
</h1>

<table>
    <thead>
        <tr>
            <th>
                Bild
            </th>
            <th>
                Rezeptname
            </th>
            <th>
                Beschreibung
            </th>
        </tr>
    </thead>
    <tfoot>
        {{for row in recipes:}}
        <tr>
            <td>
                 <a href="{{=URL('showRecipe', args=row.id)}}">
                      {{if row.image != "":}}
                <img src="{{=URL('default', 'download', args=row.image)}}" class="listRecipeImage"/>
                    {{else:}}
                    <div class="noListRecipeImage"></div>
                {{pass}}
                </a>
            </td>
            <td>
                <a href="{{=URL('showRecipe', args=row.id)}}">
                    {{=row.title}}
                </a>
            </td>
            <td>
                {{=row.description}}
            </td>
        </tr>
        {{pass}}
    </tfoot>
</table>

{{if page > 0:}}
<a href="{{=URL('originRecipeList', args = (originId, page - 1))}}">
    <button>
        Zur√ºck
    </button>
</a>
{{pass}}

{{if len(recipes) >= RECIPES_PER_PAGE:}}
<a href="{{=URL('originRecipeList', args = (originId, page + 1))}}">
    <button>
        Weiter
    </button>
</a>
{{pass}}
